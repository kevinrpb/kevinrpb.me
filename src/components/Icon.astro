---
import { Icon as AstroIcon } from 'astro-icon/components'

// prettier-ignore
export type IconName = 'cib:github'| 'cib:mastodon'| 'material-symbols:alternate-email-rounded' | 'material-symbols:link'| 'material-symbols:lab-profile-outline-rounded' | 'material-symbols:globe' | 'material-symbols:download' | 'mdi:briefcase-outline' | 'mdi:academic-cap-outline' | 'mdi:heart-outline'

export interface Props {
	name: IconName
	class?: string
	size?: number
}

const { name, ...rest } = Astro.props
---

<AstroIcon name={name} {...rest} />
