---
import Layout from '@/layouts/BaseLayout.astro'
import ShadertoyCanvas from '@/components/webgl/ShadertoyCanvas.astro'
import { type ShaderId, SHADER_SOURCES } from '@/data/shadertoy'

export const getStaticPaths = () => Object.keys(SHADER_SOURCES).map((id) => ({ params: { id } }))

const { id } = Astro.params
---

<Layout title="Shadertoy Viewer" background={false} class="w-full h-full" htmlClass="w-full h-full">
	<noscript>This page needs JavaScript to run the shaders. 😞</noscript>

	<ShadertoyCanvas shaderId={id as ShaderId} />
</Layout>
