---
import Layout from '@/layouts/BaseLayout.astro'

import PrintablePage from '@/components/PrintablePage.astro'
import Header from '@/components/Header.astro'
import Icon from '@/components/Icon.astro'
import Resume from '@/components/Resume.astro'

import resumeData from '@/data/resume.json'
---

<Layout title="Kevin's resume" class='flex flex-col gap-2 max-md:gap-0'>
	<Header
		class:list={[
			'md:mt-4 md:mx-auto',
			'max-md:flex-1 max-md:m-0 max-md:rounded-none max-md:bg-opacity-100 max-md:backdrop-blur-none max-md:drop-shadow-none',
			'print:display-none',
		]}
	>
		<a
			class:list={[
				'flex flex-row items-center justify-center ml-auto px-2',
				'text-sm',
				'prose no-underline rounded-full bg-pastel-green border-4 border-white drop-shadow-xl',
			]}
			href='/files/kevinrpb_cv.pdf'
			aria-label='Download resume in PDF format'
		>
			<span class='flex flex-flow items-center justify-center'>
				<Icon class='mr-1' name={'material-symbols:download'} />
				Download
			</span>
		</a>
	</Header>

	<PrintablePage transition:name='main-element' transition:animate='fade'>
		<Resume data={resumeData} />
	</PrintablePage>
</Layout>
